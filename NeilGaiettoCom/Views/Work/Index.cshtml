@section scripts{
    <script type="text/javascript">
        NeilSite.Work = new (function () {
            var me = this;
            //public
            this.init = function () {
                bindEvents();
            }

            //private
            function bindEvents() {

                //extend description on skills with more info
                var current;
                $('.skillList').delegate("a", "click", function () {
                    var descID = $(this).attr('data-desc');//find id to desc associated with skill
                    if (!current || descID !== current) {
                        current = descID;
                        $('.skillDescriptions div').slideUp();//hide any already open
                        $('#' + descID).slideDown();//show associated
                    }

                });

                //delay underline hover
                var hovering = false;
                $('.moreHover').mouseover(function () {
                    if (!hovering) {
                        $('.skillList a.more').addClass('hovering');
                        window.setTimeout(function () { $('.skillList a.more').removeClass('hovering'); }, 250);
                        window.setTimeout(function () { hovering = false; }, 500);
                    }
                    hovering = true;
                });


                //work slider
                $('.workExamples .flexslider').flexslider();

            }

        });
    </script>
}

