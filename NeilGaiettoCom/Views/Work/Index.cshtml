@section scripts{
    <script type="text/javascript">
        NeilSite.Work = new (function () {
            var me = this;
            //public
            this.init = function () {
                bindEvents();
            }

            //private
            function bindEvents() {

                //extend description on skills with more info
                var current;
                $('.skillList').delegate("a.more", "click", function () {
                    var descID = $(this).attr('data-desc');//find id to desc associated with skill
                    if (!current || descID !== current) {
                        current = descID;
                        $('.skillDescriptions div').slideUp();//hide any already open
                        $('#' + descID).slideDown();//show associated
                    }

                });

                //delay underline hover
                var hovering = false;
                $('.moreHover').mouseover(function () {
                    if (!hovering) {
                        $('.skillList a.more').addClass('hovering');
                        window.setTimeout(function () { $('.skillList a.more').removeClass('hovering'); }, 250);
                        window.setTimeout(function () { hovering = false; }, 500);
                    }
                    hovering = true;
                });


                //work slider
                var showSlideDesc = function (slider) {
                    var i = slider.currentSlide;
                    $('.flex-slide-desc li').removeClass('active');
                    $('.flex-slide-desc li').eq(i).addClass('active');
                }
                var hideSlideDesc = function (slider) { $('.flex-slide-desc li').removeClass('active'); }
                $('.workExamples .flexslider').flexslider({ animation: "slide", start: showSlideDesc, before: hideSlideDesc, after: showSlideDesc });

            }

        });
    </script>
}

